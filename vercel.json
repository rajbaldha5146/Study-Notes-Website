{
  "version": 2,
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/server.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
    },
    {
      "src": "/assets/(.*)",
      "dest": "/dist/assets/$1"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|json|woff|woff2|ttf|eot))",
      "dest": "/dist/$1"
    },


    {
      "src": "/login",
      "dest": "/dist/index.html"
    },
    {
      "src": "/register",
      "dest": "/dist/index.html"
    },
    {
      "src": "/app/(.*)",
      "dest": "/dist/index.html"
    },
    {
      "src": "/note/(.*)",
      "dest": "/dist/index.html"
    },
    {
      "src": "/folder/(.*)",
      "dest": "/dist/index.html"
    },
    {
      "src": "/create(.*)",
      "dest": "/dist/index.html"
    },
    {
      "src": "/edit/(.*)",
      "dest": "/dist/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
