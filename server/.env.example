# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/notemaster?retryWrites=true&w=majority

# JWT Secret (Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long

# Server Configuration
PORT=5000
NODE_ENV=development

# Client URL (Frontend URL)
CLIENT_URL=http://localhost:5173

# Email Configuration (for password reset)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=NoteMaster <noreply@notemaster.com>

# Note: For production on Vercel, set these in Vercel Dashboard
